<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorMenu"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_weight="0"
            android:text="Forum"
            android:textAlignment="center"
            android:layout_marginTop="17sp"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/fortest"
            android:layout_width="300dp"
            android:layout_height="40sp"
            android:layout_weight="0.8"
            android:hint="Search ..."
            android:background="@drawable/border"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:textSize="15sp"
            android:layout_marginBottom="10sp"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/addActivity"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:background="@drawable/buttadd"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:layout_marginTop="17sp"
            android:clickable="true"
            android:longClickable="false"
            android:tint="@color/colorWhite" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/test1">

        <RelativeLayout
            android:layout_width="70sp"
            android:layout_height="30sp"
            android:background="@drawable/border_activity_sss"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parenting"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70sp"
            android:layout_height="30sp"
            android:background="@drawable/border_activity_sss"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70sp"
            android:layout_height="30sp"
            android:background="@drawable/border_activity_sss"
            android:layout_centerVertical="true"
            android:layout_marginLeft="185sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80sp"
            android:layout_height="30sp"
            android:background="@drawable/border_activity_sss"
            android:layout_centerVertical="true"
            android:layout_marginLeft="270sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Tags"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activity1"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:padding="10sp"
            android:background="@drawable/border_activity_l">

            <TextView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:background="@drawable/circle_1"
                android:text="S"
                android:textAlignment="center"
                android:layout_marginTop="13sp"
                android:layout_marginLeft="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="50sp"
                android:text="Needing advice !!!!! FTM"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:text="I’m currently 34w and 6d pregnant and still don’t know ... "
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="40sp"
                android:layout_marginLeft="50sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/10/2019"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_marginTop="105sp"
                android:layout_marginLeft="270sp"/>

            <RelativeLayout
                android:layout_width="55sp"
                android:layout_height="45sp"
                android:layout_marginTop="75sp"
                android:layout_marginLeft="340sp"
                android:background="@drawable/border_activity_s">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Replies"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="20sp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity2"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:padding="10sp"
            android:background="@color/test1">

            <TextView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:background="@drawable/circle_1"
                android:text="P"
                android:textAlignment="center"
                android:layout_marginTop="13sp"
                android:layout_marginLeft="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="50sp"
                android:text="Parents"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:text="How did u tell ur parents you were preg ... "
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="40sp"
                android:layout_marginLeft="50sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08/10/2019"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_marginTop="105sp"
                android:layout_marginLeft="270sp"/>

            <RelativeLayout
                android:layout_width="55sp"
                android:layout_height="45sp"
                android:layout_marginTop="75sp"
                android:layout_marginLeft="340sp"
                android:background="@drawable/border_activity_s">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Replies"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="20sp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/activity3"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:padding="10sp">

            <TextView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:background="@drawable/circle_1"
                android:text="K"
                android:textAlignment="center"
                android:layout_marginTop="13sp"
                android:layout_marginLeft="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="50sp"
                android:text="Real Talk About Depression"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:text="Please share your stories! Our goal is to increase awareness and ..."
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="40sp"
                android:layout_marginLeft="50sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10/2019"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_marginTop="105sp"
                android:layout_marginLeft="270sp"/>

            <RelativeLayout
                android:layout_width="55sp"
                android:layout_height="45sp"
                android:layout_marginTop="75sp"
                android:layout_marginLeft="340sp"
                android:background="@drawable/border_activity_s">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Replies"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="20sp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>